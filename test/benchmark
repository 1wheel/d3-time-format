#!/usr/bin/env node

var d3_time_format = require("../");

var n = 1e5,
    formats = new Array(n),
    format = d3_time_format.timeFormat("%c"),
    parse = d3_time_format.timeParse("%c");

var start = now();
for (var i = 0; i < n; ++i) {
  formats[i] = format(new Date(Math.random() * 1e12));
}
var end = now();
console.log("format", Math.round(end - start));

var start = now();
for (var i = 0; i < n; ++i) {
  parse(formats[i]);
}
var end = now();
console.log("parse", Math.round(end - start));

function now() {
  var now = process.hrtime();
  return now[0] * 1e3 + now[1] / 1e6;
}
